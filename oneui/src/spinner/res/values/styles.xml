<resources>
    
    <style name="OneUI.Spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:gravity">start|center</item>
        <item name="android:background">@drawable/oneui_spinner_background</item>
        <item name="android:clickable">true</item>
        <item name="android:popupBackground">@drawable/oneui_menu_popup_background</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:popupAnimationStyle">@style/OneUI.Animation.ListPopup</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:popupElevation">8dp</item>
        <item name="overlapAnchor">true</item>
    </style>

    <style name="OneUI.Spinner.DropDownItem" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/OneUI.TextAppearance.Widget.DropDownItem</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:checkMark">@drawable/oneui_spinner_checked_ic_selector</item>
        <item name="android:minWidth">168dp</item>
        <item name="android:minHeight">43dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <!-- Rounded ripple effect for spinner -->
    <style name="OneUI.Spinner.DropDownListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/oneui_spinner_selector</item>
    </style>
	
	<style name="OneUI.TextAppearance.Widget.DropDownItem" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/oneui_spinner_dropdown_text_color</item>
    </style>

</resources>
