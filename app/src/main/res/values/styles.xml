<resources>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.AppCompat.Toolbar.Title</item>
    </style>

    <style name="CardViewTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardTheme" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/switch_card_background_off</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">14dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="BottomDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="bottomSheetStyle">@style/DialogBackground</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>

    <style name="DialogBackground" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="enforceMaterialTheme">false</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="SwitchTheme" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:thumbOffset">0dp</item>
        <item name="android:thumb">@drawable/switch_thumb_selector</item>
        <item name="android:switchMinWidth">20dp</item>
        <item name="showText">false</item>
        <item name="switchPadding">0dp</item>
        <item name="track">@drawable/switch_track_selector</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="enforceMaterialTheme">false</item>
    </style>

    <style name="SwitchText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="singleLine">true</item>
    </style>

    <style name="SettingsTitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="singleLine">true</item>
    </style>

    <style name="SettingsSubtitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">#8A000000</item>
    </style>

    <style name="SearchButton.Selected" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="SearchButton.Unselected" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#7A7A7A</item>
    </style>

    <style name="RadioButtonTheme" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:background">@drawable/sesl_control_background</item>
        <item name="android:button">@drawable/sesl_btn_radio</item>
    </style>

    <style name="TipText" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:layout_marginTop">16dp</item>
        <item name="background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tip_text_color</item>
    </style>

    <style name="ProgressBarStyle.Circle" parent="@android:style/Widget.ProgressBar">
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/sesl_progress</item>
        <item name="android:progressDrawable">@drawable/sesl_progress_circle</item>
    </style>

    <style name="SpinnerStyle" parent="@style/Platform.Widget.AppCompat.Spinner">
        <item name="android:gravity">start|center</item>
        <item name="android:background">@drawable/sesl_spinner_background_dark</item>
        <item name="android:clickable">true</item>
        <item name="android:dropDownSelector">?android:listChoiceBackgroundIndicator</item>
        <item name="android:popupBackground">@drawable/sesl_menu_popup_background_dark</item>
        <item name="android:dropDownHorizontalOffset">0.0dip</item>
        <item name="android:dropDownVerticalOffset">0.0dip</item>
        <item name="android:popupAnimationStyle">@style/Base.Animation.AppCompat.ListPopup</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:popupElevation">@dimen/sesl_menu_popup_elevation</item>
        <item name="overlapAnchor">true</item>
    </style>

    <style name="Base.Animation.AppCompat.ListPopup" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/sesl_list_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/sesl_list_popup_exit</item>
    </style>

    <style name="SpinnerDropDownItem" parent="@android:style/Widget.Material.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Widget.DropDownItem</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/sesl_popup_menu_item_top_padding</item>
        <item name="android:paddingBottom">@dimen/sesl_popup_menu_item_bottom_padding</item>
        <item name="android:checkMark">@drawable/sesl_spinner_checked_ic_selector</item>
        <item name="android:minWidth">@dimen/sesl_popup_menu_item_min_width</item>
        <item name="android:minHeight">@dimen/sesl_popup_menu_item_min_height</item>
        <item name="android:paddingStart">@dimen/sesl_popup_menu_item_start_padding</item>
        <item name="android:paddingEnd">@dimen/sesl_popup_menu_item_end_padding</item>
    </style>

    <style name="Base.TextAppearance.AppCompat.Widget.DropDownItem" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/sesl_popup_menu_item_text_size</item>
        <item name="android:textColor">@color/sesl_spinner_dropdown_text_color_dark</item>
    </style>

</resources>
