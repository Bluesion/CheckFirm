<resources>

    <style name="CheckFirm" />

    <style name="ClickableLayout">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="BottomSheetDialogTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OneUI.TipText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/oneui4_tip_text_color</item>
    </style>

    <style name="OneUI.AppBarLayout" parent="@style/Widget.Material3.AppBarLayout">
        <item name="android:background">@color/oneui_background</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="OneUI.CollapsingToolbarLayout" parent="@style/Widget.Material3.CollapsingToolbar">
        <item name="android:background">@color/oneui_background</item>
        <item name="contentScrim">@color/oneui_background</item>
        <item name="titleEnabled">false</item>
    </style>

    <style name="OneUI.Toolbar" parent="@style/Widget.Material3.Toolbar">
        <item name="android:minHeight">56dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextAppearance">@style/OneUI.Toolbar.Title</item>
    </style>

    <style name="OneUI.Toolbar.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/oneui_toolbar_text_color</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OneUI.AboutPageButton" parent="@style/Widget.Material3.Button.UnelevatedButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/oneui4_about_page_button_text</item>
        <item name="backgroundTint">@color/button_ripple_color</item>
        <item name="rippleColor">@color/oneui4_about_page_button_ripple_color</item>
        <item name="cornerRadius">22dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">216dp</item>
        <item name="android:lines">1</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="OneUI.DialogButton" parent="@style/Widget.Material3.Button.TextButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?actionMenuTextColor</item>
        <item name="rippleColor">@color/button_ripple_color</item>
    </style>

    <style name="ShapeAppearanceOverlay.Chip">
        <item name="cornerSize">50%</item>
    </style>

    <style name="BookmarkChip" parent="Widget.Material3.Chip.Assist">
        <item name="chipIconVisible">false</item>
    </style>

    <style name="CardTheme" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/oneui_surface</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">14dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="SettingsTitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">17sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="singleLine">true</item>
    </style>

    <style name="SettingsDescription" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/oneui_settings_description_color</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SettingsDivider" parent="OneUI.Divider">
        <item name="android:layout_marginHorizontal">14dp</item>
    </style>

    <style name="SearchDialogTheme" parent="ThemeOverlay.CheckFirm.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/SearchDialogTheme.Modal</item>
    </style>

    <style name="SearchDialogTheme.Modal" parent="Widget.CheckFirm.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="SearchDeviceListCardView" parent="CardTheme">
        <item name="contentPaddingLeft">20dp</item>
        <item name="contentPaddingRight">20dp</item>
        <item name="contentPaddingTop">12dp</item>
        <item name="contentPaddingBottom">12dp</item>
        <item name="cardBackgroundColor">@color/oneui_surface</item>
        <item name="cardElevation">16dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Corner.Top</item>
    </style>

    <style name="ShapeAppearanceOverlay.Corner" />

    <style name="ShapeAppearanceOverlay.Corner.Top">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">14dp</item>
        <item name="cornerSizeTopLeft">14dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    
    <style name="CheckFirm.Spinner.DropDownItem" parent="OneUI.Spinner.DropDownItem">
        <item name="android:textAppearance">@style/CheckFirm.TextAppearance.Widget.DropDownItem</item>
    </style>

    <style name="CheckFirm.TextAppearance.Widget.DropDownItem" parent="OneUI.TextAppearance.Widget.DropDownItem">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/oneui_spinner_dropdown_text_color</item>
        <item name="fontFamily">@font/font_wanted_sans</item>
    </style>

</resources>
